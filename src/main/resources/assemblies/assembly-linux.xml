<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>distribution-linux</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <outputDirectory>bin</outputDirectory>
      <directory>src/main/scripts</directory>
      <filtered>true</filtered>
      <fileMode>775</fileMode>
      <includes>
        <include>**/*.sh</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>bin/scripts</outputDirectory>
      <directory>src/main/scripts/groovy</directory>
      <filtered>true</filtered>
      <fileMode>775</fileMode>
      <includes>
        <include>**/*.groovy</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>bin</outputDirectory>
      <directory>src/main/silverpeas/${server.distribution}</directory>
      <includes>
        <include>**/pom.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>setup/appserver</outputDirectory>
      <directory>src/main/config/appserver</directory>
      <includes>
        <include>**/*.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>bin/jar/</outputDirectory>
      <directory>src/main/upgrades</directory>
      <includes>
        <include>*/*</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <outputDirectory>setup/settings</outputDirectory>
      <source>src/main/config/settings/${server.distribution}/linux/SilverpeasSettings.xml</source>
      <filtered>false</filtered>
    </file>
    <file>
      <outputDirectory>setup/settings</outputDirectory>
      <source>src/main/config/settings/${server.distribution}/linux/JBossSettings.xml</source>
      <filtered>false</filtered>
    </file>
    <file>
      <outputDirectory>setup/settings</outputDirectory>
      <source>src/main/config/settings/${server.distribution}/linux/sample_config.properties</source>
      <filtered>false</filtered>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>bin/jar</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
  </dependencySets>
</assembly>
